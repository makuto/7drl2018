SubDir . ;

SubDirC++Flags $(ALLLIBSC++FLAGS) ;

if $(WINDOWS)
{
        SUFEXE = .exe ;
}

Main 7drl2018 : src/main.cpp 
                src/RLMap.cpp 
                src/Levels.cpp 
                src/Entity.cpp 
                src/Enemies.cpp 
                src/Abilities.cpp
                src/Logging.cpp 
                src/Utilities.cpp 
                src/PlayerDeadScreen.cpp 
                src/MainMenu.cpp 
                src/Gameplay.cpp 
                src/Art.cpp
                ;

LinkLibraries 7drl2018 : libBase20 ;

if $(WINDOWS)
{
        MakeLocate 7drl2018.exe : windowsBin ;
}
else
{
        MakeLocate 7drl2018 : bin ;
}

SubInclude . libs ;